		"@types/jest": "^29.2.0",
		"@types/node": "^18.11.7",
		"eslint": "^8.26.0",
		"husky": "^8.0.1",
		"jest": "^29.2.2",
		"lint-staged": "^13.0.3",
		"npm-run-all": "^4.1.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"regenerator-runtime": "^0.13.10",
		"turbo": "^1.6.2",
		"typescript": "^4.8.4"
