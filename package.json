{
	"name": "@thematic/root",
	"version": "0.1.0",
	"private": true,
	"license": "MIT",
	"scripts": {
		"clean": "lerna run clean --stream  --parallel",
		"clean:all": "yarn clean && lerna clean --yes && rimraf node_modules",
		"lint": "essex lint",
		"lint:ci": "essex lint --docs",
		"prettify": "essex prettify",
		"bundle": "lerna run bundle --stream",
		"build": "lerna run build --stream",
		"test": "essex test",
		"test:ci": "essex test --coverage",
		"ci": "run-s lint:ci build bundle test:ci",
		"start": "lerna run start --stream --parallel",
		"release": "yarn build && lerna publish"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"devDependencies": {
		"@essex/scripts": "^7.4.0",
		"@types/node": "^14.0.13",
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.2",
		"lerna": "^3.22.1",
		"ncp": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^3.9.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "essex pre-commit",
			"commit-msg": "essex commit-msg"
		}
	},
	"prettier": "@essex/prettier-config"
}
