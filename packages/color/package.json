{
	"name": "@thematic/color",
	"version": "4.0.3",
	"license": "MIT",
	"type": "module",
	"main": "src/index.ts",
	"publishConfig": {
		"main": "dist/index.js",
		"types": "dist/index.d.ts"
	},
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/thematic.git",
		"directory": "packages/color"
	},
	"scripts": {
		"clean": "essex clean",
		"build": "essex build --docs",
		"release": "yarn npm publish --tolerate-republish --access public",
		"lint": "essex lint --noFormat",
		"lint_fix": "essex lint --fix --noFormat",
		"test": "NODE_OPTIONS=--experimental-vm-modules yarn node $(yarn bin jest) --runInBand"
	},
	"dependencies": {
		"chroma-js": "^2.4.2",
		"color-blind": "^0.1.3",
		"hsluv": "^1.0.0"
	},
	"devDependencies": {
		"@essex/jest-config": "^21.0.18",
		"@essex/scripts": "^22.2.1",
		"@essex/tsconfig-base": "^1.0.2",
		"@types/chroma-js": "^2.1.4",
		"@types/jest": "^29.2.4",
		"@types/node": "^18.11.18",
		"jest": "^29.3.1"
	},
	"peerDependencies": {
		"@types/chroma-js": "*",
		"@types/node": "*"
	},
	"peerDependenciesMeta": {
		"@types/chroma-js": {
			"optional": true
		},
		"@types/node": {
			"optional": true
		}
	},
	"essex": {
		"exports": {
			"Color": "function",
			"ColorBlindnessMode": "object",
			"ColorSpace": "object",
			"colorBlindness": "function",
			"colorBlindnessInfo": "function",
			"contrast": "function",
			"darken": "function",
			"lighten": "function",
			"defaultParams": "object",
			"getNamedSchemeColor": "function",
			"getScheme": "function",
			"isNominal": "function",
			"css2css": "function",
			"css2hex": "function",
			"css2hsl": "function",
			"css2hsluv": "function",
			"css2hsv": "function",
			"css2lch": "function",
			"css2rgb": "function",
			"css2rgba": "function",
			"css2rgbaint": "function",
			"css2rgbav": "function",
			"rgba2hex": "function",
			"rgbav2hex": "function",
			"hsluv2hex": "function",
			"hsluv2hsl": "function",
			"lch2hex": "function",
			"nearest": "function"
		},
		"swc": {
			"jsc": {
				"target": "es2019"
			}
		}
	}
}
