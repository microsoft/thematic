{
	"name": "@thematic/react",
	"version": "2.1.1",
	"license": "MIT",
	"type": "module",
	"main": "src/index.ts",
	"publishConfig": {
		"main": "dist/index.js",
		"types": "dist/index.d.ts"
	},
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/thematic.git",
		"directory": "packages/react"
	},
	"scripts": {
		"clean": "essex clean",
		"build": "essex build --skipExportCheck --docs",
		"release": "yarn npm publish --tolerate-republish --access public",
		"lint_fix": "rome check --apply-suggested src && rome format --write src",
		"lint": "rome ci src"
	},
	"dependencies": {
		"@thematic/color": "workspace:^",
		"@thematic/core": "workspace:^"
	},
	"devDependencies": {
		"@essex/scripts": "^22.1.0",
		"@essex/tsconfig-base": "^1.0.2",
		"@types/node": "^18.8.4",
		"@types/react": "^18.0.21",
		"react": "^18.2.0",
		"rome": "^10.0.1"
	},
	"peerDependencies": {
		"@types/node": "*",
		"@types/react": ">= 17",
		"react": ">= 17"
	},
	"peerDependenciesMeta": {
		"@types/node": {
			"optional": true
		},
		"@types/react": {
			"optional": true
		},
		"react": {
			"optional": false
		}
	},
	"essex": {
		"exports": {
			"ApplicationStyles": "function",
			"ThematicContext": "object",
			"ThematicProvider": "function",
			"application2style": "function",
			"defaultTheme": "object",
			"mark2style": "function",
			"useThematic": "function"
		},
		"swc": {
			"jsc": {
				"target": "es2019"
			}
		}
	}
}
