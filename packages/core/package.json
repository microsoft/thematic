{
	"name": "@thematic/core",
	"version": "3.0.0",
	"license": "MIT",
	"type": "module",
	"main": "src/index.ts",
	"publishConfig": {
		"main": "dist/index.js",
		"types": "dist/index.d.ts"
	},
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/thematic.git",
		"directory": "packages/core"
	},
	"scripts": {
		"clean": "essex clean",
		"build": "essex build --skipExportCheck --docs",
		"release": "yarn npm publish --tolerate-republish --access public",
		"test": "NODE_OPTIONS=--experimental-vm-modules yarn node $(yarn bin jest) --runInBand",
		"lint": "essex lint --fix"
	},
	"dependencies": {
		"@thematic/color": "workspace:^",
		"d3-scale": "^4.0.2",
		"lodash-es": "^4.17.21",
		"murmurhash-js": "^1.0.0"
	},
	"devDependencies": {
		"@essex/jest-config": "^21.0.14",
		"@essex/scripts": "^22.0.7",
		"@essex/tsconfig-base": "^1.0.2",
		"@types/d3-scale": "^4.0.2",
		"@types/jest": "^29.0.2",
		"@types/lodash-es": "^4.17.6",
		"@types/murmurhash-js": "^1.0.3",
		"@types/node": "^18.7.18",
		"jest": "^29.0.3",
		"npm-run-all": "^4.1.5"
	},
	"peerDependencies": {
		"@types/d3-scale": ">= 2",
		"@types/node": "*"
	},
	"peerDependenciesMeta": {
		"@types/d3-scale": {
			"optional": true
		},
		"@types/node": {
			"optional": true
		}
	},
	"essex": {
		"exports": {
			"ScaleType": "object",
			"SelectionState": "object",
			"ThemeImpl": "function",
			"ThemeVariant": "object",
			"clone": "function",
			"defaultThemes": "object",
			"gimp": "function",
			"linear": "function",
			"load": "function",
			"loadById": "function",
			"loadFromSpec": "function",
			"log": "function",
			"office": "function",
			"powerbi": "function",
			"quantile": "function",
			"recall": "function"
		},
		"swc": {
			"jsc": {
				"target": "es2019"
			}
		}
	}
}
